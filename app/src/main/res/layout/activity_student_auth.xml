<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#87CEEB"
    android:paddingHorizontal="30dp"
    tools:context=".AuthAdmin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/almendra_display"
        android:text="Student Sign-in"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp">

        <TextView
            android:id="@+id/studentSpi"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:text="Semester"
            android:paddingLeft="100dp"
            android:paddingVertical="15dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="italic"
            android:background="@drawable/rectangular_field"
            android:layout_marginLeft="10dp"/>

        <Spinner
            android:id="@+id/spinnerSemStu"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/studentSpi"
            android:background="@drawable/outline_arrow_drop_down_black_24"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <Button
        android:id="@+id/stenter"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="Enter"
        android:layout_marginTop="30dp"
        android:textSize="22dp"
        android:textAllCaps="false" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="40dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Are you a faculty member?"
            android:textColor="#000000"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/backpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Login here"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"/>
    </LinearLayout>



</LinearLayout>